<%- include('../partials/header') %>
<body class='userEditBg'>
  <div class="userIndexBg2">
    <h1 class="detailsHeadings">Edit Your Details</h1>
    <form action="/user/<%=user.id%>?_method=PUT" method="POST" class="userForm">
      <div>
        <span class="goldenTags">Name</span>
        <input type="text" name="name" value="<%=user.name%>">
      </div>
      <div>
        <span class="goldenTags">Weight</span>
        <input type="number" name="weight" value="<%=user.weight%>">
      </div>
      <div>
        <span class="goldenTags">Height</span>
        <input type="number" name="height" value="<%=user.height%>">
      </div>
      <div>
        <span class="goldenTags">Age</span>
        <input type="number" name="age" value="<%=user.age%>">
      </div>
      <div>
        <span class="goldenTags">Calories</span>
        <input type="number" name="calories" value="<%=user.calories%>">
      </div>
      <button type="submit">Update User</button>
    </form>
  </div>
</body>

